<Window x:Class="WpfApp2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp2"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <DockPanel>
        <Grid DockPanel.Dock="Left" Width="144">
            <Border Background="LightBlue" 
            BorderBrush="Black" 
            BorderThickness="2" >
            <StackPanel>
                <Button Content="Dashboard" Click="Dashboard_Click" Margin="0,5,0,5"/>
                <Button Content="Tableau" Click="Tableau_Click" Margin="0,5,0,5"/>
                <Button Content="Se Connecter" Click="Connection_Click" Margin="0,5,0,5"/>
            </StackPanel>
            </Border>
        </Grid>
        <Grid>
            <Frame x:Name="MainFrame" />
        </Grid>
    </DockPanel>

</Window>
